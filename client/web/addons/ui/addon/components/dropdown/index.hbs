{{#if this.isOpen}}
  <KeyboardPress @key='Escape' @onDown={{this.toggleMenu}} />
{{/if}}

<div
  data-test-dropdown
  class='
    dropdown
    {{if this.isOpen 'active'}}
  '
  ...attributes
>

  {{yield this.toggleMenu to='trigger'}}

  {{#if this.isOpen}}
    <div
      class='no-select full-overlay invisible'
      role='button'
    />
  {{/if}}

  <div class='dropdown-menu'>
    {{yield this.closeMenu to='content'}}
  </div>
</div>

