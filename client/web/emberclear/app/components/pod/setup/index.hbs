{{#if this.interpreter.state.value}}
  {{#let
    (component (concat 'pod/setup/' this.interpreter.state.value))
    as |ComponentForCurrentState|
  }}

    <div class='container center-self'>

      <ComponentForCurrentState
        @next={{fn this.interpreter.send 'NEXT'}}
        @prev={{fn this.interpreter.send 'PREV'}}
      />

    </div>

  {{/let}}
{{else}}
  <ErrorCard @message='An error occurred while trying to get things ready signup or login' />
{{/if}}